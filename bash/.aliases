## DirectoryJumping
alias ~="cd ~"
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Git
alias g="git"
alias gs="git status"
alias gb="git branch -avv"
alias gh="git log --pretty=oneline --graph --decorate --all"
alias gl="git log --oneline --no-merges"

# Docker
alias d="docker"
alias dp="docker ps -a"
alias di="docker images"
alias dc="docker-compose"
alias up="docker-compose up -d"
alias down="docker-compose down"
function dock {
    docker exec -it $1 /bin/bash;	
}

# Laravel
alias a="php artisan"

# Just use the better version
alias vi=nvim
alias n="nvim ."
alias top=htop
